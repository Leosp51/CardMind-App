                    x:Name="lbValor"
                    FontSize="20"
                    />
            </HorizontalStackLayout>
            <HorizontalStackLayout
                HorizontalOptions="Center">
                <Button
                    x:Name="btnSim"
                    Text="Sim"
                    BackgroundColor="Red"
                    TextColor="White"
                    FontSize="Medium"
                    Padding="5"
                    Margin="15"
                    />
