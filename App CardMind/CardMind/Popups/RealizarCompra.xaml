        BorderColor="Red"
        MinimumHeightRequest="200"
        MinimumWidthRequest="200"
        BackgroundColor="White">
        <VerticalStackLayout
            >
            <HorizontalStackLayout
                HorizontalOptions="Center">
                <Label
                    x:Name="lbPergunta"
                    FontSize="Small"
                    />
