<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CardMind.Views.CartaResposta"
             
             xmlns:controls="clr-namespace:CardMind.Controls">
    <VerticalStackLayout>

        <controls:Header
            x:Name="header"/>
        <Border
        Padding="50"
        Stroke="Red">
            <VerticalStackLayout>
                <Label
                    x:Name="lbNomeCarta"
                    FontSize="Large"
                    FontAttributes="Bold"
                    HorizontalTextAlignment="Center"/>
                <Frame
                    Padding="2"
                    BorderColor="Red"
                    HeightRequest="400">
                    <Label
                    x:Name="lbResposta"
                    FontSize="20"/>
                </Frame>
                <Button
                    Text="Finalizar"
                    BackgroundColor="Red"
                    TextColor="White"
                    Clicked="Button_Clicked"/>
            </VerticalStackLayout>
        </Border>
    </VerticalStackLayout>
</ContentPage>