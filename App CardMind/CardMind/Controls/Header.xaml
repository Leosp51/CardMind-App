             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CardMind.Controls.Header"
             x:Name="this">
    <VerticalStackLayout>
        <Frame
            HeightRequest="70"
            BackgroundColor="Red"
            BindingContext="{x:Reference this}">
            <HorizontalStackLayout>
                <Label
                    Text="OlÃ¡, Lucas!"
